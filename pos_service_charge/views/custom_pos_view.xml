<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_inherit_service_charge" model="ir.ui.view">
        <field name="name">view.product.inherit.service.charge</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <div>
                    <field name="is_service_charge" invisible="1"/>
                    <span invisible="1">Use for service charge</span>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_pos_order_inherit_service_charge" model="ir.ui.view">
        <field name="name">view.pos.order.inherit.service.charge</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="service_charge" force_save="1" widget="monetary"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="custom_bi_pos_discount_form_view">
        <field name="name">res.config.setting.form.extended.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="before">
                <h2 name="pos_interface">Service Charge Configuration in POS</h2>
                <div class="row mt16 o_settings_container" id="service_charge_section">
                    <div class="col-12 col-lg-6 o_setting_box" id="default_sales_tax_setting">
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="service_charge_type"/>
                                <div class="content-group mt16">
                                    <field name="service_charge_type" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_setting_right_pane" invisible = "service_charge_type == False"
                            required = "service_charge_type != False">
                            <div>
                                <label for="product_id"/>
                                <div class="content-group mt16">
                                    <field name="product_id" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                             <div>
                                <label for="pos_service_charge_amount"/>
                                <div class="content-group mt16">
                                    <field name="pos_service_charge_amount" colspan="4" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
